@model List<Product>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Ürün Listesi</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Kategori Adı</th>
                                <th>Stok Sayısı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice TL</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.ProductStock</td>
                                   
                                    <td>
                                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-outline-danger btn-sm">Sil</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-outline-success btn-sm">Güncelle</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
                </div>
            </div>
        </div>
    </div>

</div>

