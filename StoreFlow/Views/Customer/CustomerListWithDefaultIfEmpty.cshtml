@model List<Customer>
@{
    ViewData["Title"] = "CustomerListWithDefaultIfEmpty";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Listesi (A--Z)</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı</th>
                                <th>Müşteri Şehir</th>
                                <th>Bakiye</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CustomerName @item.CustomerSurname</td>
                                    <td>@item.CustomerCity / @item.CustomerDistrict</td>
                                    <td>@item.CustomerBalance</td>


                                    <td>
                                        <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerId" class="btn btn-outline-danger btn-sm">Sil</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-id="@item.CustomerId" class="btn btn-outline-success btn-sm">Güncelle</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Customer/CreateCustomer/" class="btn btn-outline-primary">Yeni Müşteri Girişi</a>
                </div>
            </div>
        </div>
    </div>

</div>





