@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Kategori Listesi</h3>
                <p class="card-description">
                    <code>Kategori ile ilgili işlemlerinizi buradan yapabilirsiniz.</code>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kategori Adı</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>
                                    @if(item.CategoryStatus==true)
                                    {
                                        <td><label class="badge badge-success badge-pill">Aktif Kategori</label></td>
                                    }
                                    else
                                    {
                                        <td><label class="badge badge-danger badge-pill">Pasif Kategori</label></td>
                                    }
                                    <td>
                                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-danger btn-sm">Sil</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-success btn-sm">Güncelle</a>
                                    </td>
                                   
                                </tr>
                            }
                
                          
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>

</div>
