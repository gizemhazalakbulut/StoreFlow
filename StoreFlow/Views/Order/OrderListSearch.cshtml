@model List<Order>
@{
    ViewData["Title"] = "OrderListSearch";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Sipariş Listesi 2</h3>
                <div class="table-responsive">
                    <h2>Duruma Göre Arama İşlemi</h2>
                    <form asp-action="OrderListSearch" method="get">
                        <div class="row">

                            <div class="col-md-9 grid-margin">

                                <input type="text" name="name" placeholder="Örnek: taşıma durumunda" class="form-control " />
                                <br />
                                <br />
                                <label>Filtre Tipi:</label>
                                <select name="filterType" class="form-control">
                                    <option value="start">Bu harflerle başlıyorsa</option>
                                    <option value="end">Bu harflerle bitiyorsa</option>
                                </select>


                            </div>

                            <div class="col-md-3 grid-margin">

                                <button type="submit" class="btn btn-outline-success mt-2">Ara</button>

                            </div>





                        </div>
                    </form>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.OrderCount</td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>

                                    <td>
                                        <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@item.OrderId" class="btn btn-outline-danger btn-sm">Sil</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Order" asp-action="UpdateOrder" asp-route-id="@item.OrderId" class="btn btn-outline-success btn-sm">Güncelle</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-primary">Yeni Sipariş Girişi</a>
                </div>
            </div>
        </div>
    </div>

</div>





